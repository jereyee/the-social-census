{
  "name": "social-census",
  "version": "0.1.0",
  "private": true,
  "author": "Group 9",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && npm run format",
    "format": "prettier --write src",
    "up-latest": "yarn upgrade-interactive --latest",
    "release": "standard-version",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install",
    "gen:theme-typings": "chakra-cli tokens src/styles/customTheme.ts",
    "postinstall": "npm run gen:theme-typings"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.7",
    "@emotion/cache": "^11.4.0",
    "@emotion/react": "^11.4.1",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@fontsource/inter": "^4.5.0",
    "@fontsource/lexend": "^4.5.1",
    "embla-carousel": "^4.5.3",
    "firebase": "^9.0.2",
    "framer-motion": "^4.1.17",
    "next": "^11.1.2",
    "next-pwa": "^5.3.1",
    "next-seo": "^4.26.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-id-swiper": "^4.0.0",
    "swiper": "^7.0.5"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.5.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/react": "^17.0.20",
    "commitlint": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-sznm": "^0.1.5",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "next-sitemap": "^1.6.164",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
